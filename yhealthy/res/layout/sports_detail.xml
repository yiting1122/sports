<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/title"
        layout="@layout/title" />

    <ScrollView
        android:id="@+id/mScroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:fadingEdge="none" >

        <LinearLayout
            android:id="@+id/detail_gallery_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <!-- 上方图片 -->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

               
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/shoe_price_info"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_margin="5dip"
                android:background="@drawable/bg4"
                android:gravity="center"
                android:orientation="vertical" >

                <com.baidu.mapapi.map.MapView
                    android:id="@+id/bmapView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/detail_tobuymust_button"
                    android:layout_width="145dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/btn_pink"
                    android:gravity="center"
                    android:text="加入活动"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/detail_buy_button"
                    android:layout_width="145dip"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_blue"
                    android:gravity="center"
                    android:text="查看地图"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
            <!-- 商品信息 -->

            <LinearLayout
                android:id="@+id/shoe_definite_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:background="@drawable/bg4"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="2dip"
                    android:text="乐子信息"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/spikearedetail_productname_color"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/gallery_line"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@color/note_gray" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:orientation="horizontal"
                    android:paddingLeft="10dip" >

                    <TextView
                        android:layout_width="65dip"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="乐子内容: "
                        android:textColor="@color/spikearedetail_productname_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/sports_content"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="@color/home_list_color"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:orientation="horizontal"
                    android:paddingLeft="10dip" >

                    <TextView
                        android:layout_width="65dip"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="创建者: "
                        android:textColor="@color/spikearedetail_productname_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/sports_user_build"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="@color/home_list_color"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:orientation="horizontal"
                    android:paddingLeft="10dip" >

                    <TextView
                        android:layout_width="65dip"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="参加人数: "
                        android:textColor="@color/spikearedetail_productname_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/sports_users"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="@color/home_list_color"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:orientation="horizontal"
                    android:paddingLeft="10dip" >

                    <TextView
                        android:layout_width="65dip"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="活动类型: "
                        android:textColor="@color/spikearedetail_productname_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/sports_class"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="@color/home_list_color"
                        android:textSize="12sp" />
                </LinearLayout>
                  <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:orientation="horizontal"
                    android:paddingLeft="10dip" >

                    <TextView
                        android:layout_width="65dip"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="活动积分: "
                        android:textColor="@color/spikearedetail_productname_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/sports_score"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="@color/home_list_color"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>  
        </LinearLayout>
    </ScrollView>

</RelativeLayout>